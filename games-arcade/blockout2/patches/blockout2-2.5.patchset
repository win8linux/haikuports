From 104d45b53db413f0dbd8da0c5bc066716aae7a21 Mon Sep 17 00:00:00 2001
From: Julius Enriquez <win8linux@gmail.com>
Date: Tue, 18 Apr 2023 21:21:01 +0800
Subject: Remove -lasound and -ldl  LDFLAGS


diff --git a/BlockOut/Makefile b/BlockOut/Makefile
index 5debdc4..5f38851 100644
--- a/BlockOut/Makefile
+++ b/BlockOut/Makefile
@@ -52,8 +52,8 @@ CXXFLAGS =     -O2 -Dhaiku -c \
 
 LFLAGS   =      -Wl,--strip-all \
 		$(ADD_LIBS) \
-		-lSDL_mixer -lSDL -lasound \
-		-lGL -lGLU -lpthread -lm -ldl
+		-lSDL_mixer -lSDL -lGL -lGLU \
+		-lpthread -lm
 
 else
 
@@ -62,8 +62,8 @@ CXXFLAGS =     -g -D_DEBUG -Dhaiku -c \
 
 LFLAGS   =      -L $(SDL_LIBS) \
 		$(ADD_LIBS) \
-		-lSDL_mixer -lSDL -lasound \
-		-lGL -lGLU -lpthread -lm -ldl
+		-lSDL_mixer -lSDL -lGL -lGLU \
+		-lpthread -lm
 
 endif
 
