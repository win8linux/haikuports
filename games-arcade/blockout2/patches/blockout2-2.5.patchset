From ce9bca69881b1457b1bb91785dd85d19ed2be109 Mon Sep 17 00:00:00 2001
From: Julius Enriquez <win8linux@gmail.com>
Date: Tue, 18 Apr 2023 01:37:57 +0800
Subject: SDL path changes for Haiku


diff --git a/BlockOut/Makefile b/BlockOut/Makefile
index 0cdfa00..5debdc4 100644
--- a/BlockOut/Makefile
+++ b/BlockOut/Makefile
@@ -41,18 +41,14 @@ OBJ=    BlockOut.o         PageChooseSetup.o       PageStartGame.o \
 
 ADD_LIBS = ../ImageLib/src/libimagelib.a
 
-ifdef _linux64
-SDL_LIBS = /usr/lib/x86_64-linux-gnu
-else
-SDL_LIBS = /usr/lib/i386-linux-gnu
-endif
+SDL_LIBS = /system/lib/
 
 CXX		= g++
 
 ifdef _release
 
-CXXFLAGS =     -O2 -Dlinux -c \
-               -I/usr/include/SDL -I../ImageLib/src -I.
+CXXFLAGS =     -O2 -Dhaiku -c \
+               -I/system/develop/headers/SDL -I../ImageLib/src -I.
 
 LFLAGS   =      -Wl,--strip-all \
 		$(ADD_LIBS) \
@@ -61,8 +57,8 @@ LFLAGS   =      -Wl,--strip-all \
 
 else
 
-CXXFLAGS =     -g -D_DEBUG -Dlinux -c \
-               -I/usr/include/SDL -I../ImageLib/src -I.
+CXXFLAGS =     -g -D_DEBUG -Dhaiku -c \
+               -I/system/develop/headers/SDL -I../ImageLib/src -I.
 
 LFLAGS   =      -L $(SDL_LIBS) \
 		$(ADD_LIBS) \
-- 
2.37.3


